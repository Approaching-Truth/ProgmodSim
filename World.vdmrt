class World
    instance variables
        io : IO := new IO ();

    operations
        public echoState: (nat) ==> ()
        echoState(counter) == (
            dcl succ : bool; -- used to determine the success of the print operation
            dcl str : seq of char := "";
            -- Instruction count
            str := str ^ VDMUtil`val2seq_of_char[nat](counter) ^ " - ";
            -- Time step
            str := str ^ VDMUtil`val2seq_of_char[real](MySystem`arm.time_step) ^ " - ";
            -- Angular velocity Environment
            str := str ^ VDMUtil`val2seq_of_char[real](MySystem`arm.env_joint_angle) ^ " - ";
            -- Joint angle Environment
            str := str ^ VDMUtil`val2seq_of_char[real](MySystem`arm.env_angular_velocity) ^ " - ";
            -- Angular velocity Controller
            str := str ^ VDMUtil`val2seq_of_char[real](MySystem`controller.ctl_joint_angle) ^ " - ";
            -- Joint angle Controller
            str := str ^ VDMUtil`val2seq_of_char[real](MySystem`controller.ctl_angular_velocity);
            
            str := str ^ "\n";
            succ := io.echo(str);
        );

