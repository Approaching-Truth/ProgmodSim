system MySystem

instance variables

  public static arm: Robot_Arm := new Robot_Arm();
  public static controller: Robot_Arm_Controller := new Robot_Arm_Controller();

  cpu1: CPU := new CPU(<FCFS>, 1e9);
  cpu2: CPU := new CPU(<FCFS>, 1e9);

  bus1: BUS := new BUS(<FCFS>, 1e100, {cpu1, cpu2})

operations

  public MySystem: () ==> MySystem
  MySystem() == (
    cpu1.deploy(arm);
    cpu2.deploy(controller);
  );

end MySystem